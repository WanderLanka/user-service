# Environment Configuration for WanderLanka User Service
# Copy this file to .env and update with your values

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration (User service uses its own database)
# Preferred (dedicated):
USER_MONGO_URI=mongodb://localhost:27017
USER_DB_NAME=wanderlanka_user

# Backward compatible fallback (if USER_MONGO_URI not set):
# MONGO_URI will be used, with default DB name wanderlanka_user
# MONGO_URI=mongodb://localhost:27017

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# CORS Origins (comma-separated)
# Add your frontend URLs here
CORS_ORIGINS=http://localhost:5173,http://192.168.8.159:8081,exp://192.168.8.159:8081

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# Logging
LOG_LEVEL=info
